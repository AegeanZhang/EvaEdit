{
    "editor": {
        "autoSave": true,
        "autoSaveDelay": 2000,
        "detectIndentation": true,
        "folding": {
            "enabled": true,
            "showControls": "mouseover"
        },
        "highlightCurrentLine": true,
        "insertFinalNewline": true,
        "insertSpaces": true,
        "minimap": {
            "enabled": true,
            "side": "right",
            "size": "small"
        },
        "showWhitespace": false,
        "trimTrailingWhitespace": true
    },
    "eva.editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
    "eva.editor.fontSize": 16,
    "eva.editor.showLineNumbers": true,
    "eva.editor.tabSize": 2,
    "eva.editor.wordWrap": true,
    "eva.files.restoreSession": false,
    "eva.window.isFullScreen": false,
    "eva.window.position": {
        "x": 200,
        "y": 150
    },
    "eva.window.size": {
        "height": 720,
        "width": 1280
    },
    "eva.window.title": "我的编辑器 - EvaEdit",
    "extensions": {
        "autoCompleteEnabled": true,
        "codeLensEnabled": true,
        "enabledLanguages": [
            "cpp",
            "qml",
            "javascript",
            "json",
            "cmake",
            "markdown"
        ]
    },
    "keybindings": {
        "custom": {
            "ctrl+f": "search.find",
            "ctrl+h": "search.replace",
            "ctrl+n": "file.new",
            "ctrl+o": "file.open",
            "ctrl+s": "file.save",
            "ctrl+shift+s": "file.saveAs",
            "ctrl+shift+t": "tab.reopenClosed",
            "ctrl+w": "tab.close"
        }
    },
    "search": {
        "caseSensitive": false,
        "highlightMatches": true,
        "regex": false,
        "showInlineResults": true,
        "wholeWord": false
    },
    "theme": {
        "accentColor": "#007ACC",
        "customColors": {
            "background": "#1E1E1E",
            "foreground": "#D4D4D4",
            "selection": "#264F78"
        },
        "name": "dark"
    },
    "ui": {
        "animations": true,
        "compactMode": false,
        "showMenuBar": true,
        "showStatusBar": true,
        "showToolbar": false
    }
}
